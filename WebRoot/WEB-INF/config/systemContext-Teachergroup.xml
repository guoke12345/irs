<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:aop="http://www.springframework.org/schema/aop" 
	xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	 http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.5.xsd
	 http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">
	 
	<bean id="teachergroupDao" class="dao.impl.TeachergroupDaoImpl">
		<property name="sessionFactory">
			<ref bean="sessionFactory" />
		</property>
	</bean>
	<bean id="teachergroupService" class="service.impl.TeachergroupServiceImpl">
		<property name="teachergroupDao" ref="teachergroupDao"/>
	</bean>
	<bean id="teachergroupAction" class="action.TeachergroupAction"  scope="prototype">
		<property name="teachergroupService" ref="teachergroupService"/>
	</bean>
</beans>