<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="pojo.Profile" table="profile">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity"></generator>
        </id>
         <property name="profileName" type="java.lang.String">
            <column name="profilename" length="255" />
        </property>
        <property name="profileContent" type="java.lang.String">
            <column name="profilecontent" length="100000" />
        </property>
    </class>
</hibernate-mapping>